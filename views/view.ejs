<%- include("partials/header.ejs") %>

<section class="view">
   
  <nav class="dropdown">
        <ul>
            <li>
                <div class="dropdown-items">
                    <i class='bx bx-window'></i>
                    <a href="/view">View Post</a>
                </div>
            </li>
            <li>
                <div class="dropdown-items">
                    <i class='bx bx-upload'></i>
                    <a href="/update">Update Post</a>
                </div>
            </li>
            <li>
                <div class="dropdown-items">
                    <i class='bx bxs-folder-minus'></i>
                    <a href="/delete">Delete Post</a>
                </div>
            </li>
        </ul>
  </nav>

  <% if(locals.posts.length>0){ %>
  <% for(var i=0;i<locals.posts.length;i++){%>
    <div class="view-post">
        <div class="heading">
            <h1><%= locals.titles[i] %></h1>
        </div>
        <hr>
        <div class="view-content">
            <p>
            <%= locals.posts[i] %>
            </p>
        </div>
    </div>
  <% } %>
  <% }else{ %>
        <div id="no-post">
            <h1>No posts available!ü•πü•πü•π</h1>
            <h2>Write something to contribute‚úçÔ∏è</h2>
        </div>
  <% } %>

</section> 

